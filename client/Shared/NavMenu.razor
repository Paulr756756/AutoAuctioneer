@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@inject ILocalStorageService LocalStorage
<div class="navbar bg-base-100 shadow-lg ">
    <div class="flex-1">
        <a class="btn btn-ghost normal-case text-xl" href="/">Auto-Auctioneer</a>
    </div>
    
    <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
            <li><a href="/ListedItems">Top Listings</a></li>
            <li><a>Recent Cars</a></li>
            <li><a>Recent Parts</a></li>
        </ul>
    </div>
    
    <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
            <AuthorizeView>
                <Authorized>
                    <li><a href="/garage">Garage</a></li>
                    <li><a>Link</a></li>
                    <li>
                        <details>
                            <summary>
                                @*<label tabindex="0" class="avatar">
                                    <div class="w-10 rounded-full">
                                        <img src="icon-192.png"/>
                                    </div>
                                </label>*@ 
                                @context.User.Identity.Name        
                            </summary>
                            <ul class="p-2 bg-base-100">
                                <li><a>Link 1</a></li>
                                <li @onclick="LogOut"><a>Log Out</a></li>
                            </ul>
                        </details>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <LoginModal/>
                    <RegisterModal/>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
        @*<button class="btn btn-square btn-ghost">

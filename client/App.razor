<Fluxor.Blazor.Web.StoreInitializer/>
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <p> Redirect to login</p>
                        @*<RedirectToLogin/>*@
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            <span>You are not authorized to access this resource</span>
                        </div>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <Hero ImageSrc="images/PageNotExists.jpg" HeroImgCustomAttributes="max-h-min max-w-md rounded-lg shadow-2xl" HeroBgCustomAttributes="hero min-h-min bg-base-100">
                    <HeroBody>
                        <Alert Style="alert-warning">
                            <ChildContent>Sorry There is nothing at this address</ChildContent>
                        </Alert>
                    </HeroBody>
                </Hero>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
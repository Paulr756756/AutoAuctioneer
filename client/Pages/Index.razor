@page "/"
@inject IToastService _toast
<PageTitle>Index</PageTitle>

@* <h1 class="font-extrabold text-5xl">Hello, world!</h1> *@

<div Class="container relative align-content-center flex px-6 py-6 mx-auto">
    <div class="relative z-20 flex flex-col sm:w-2/3 lg:w-2/5">

        <span class="w-20 h-2 mb-12 bg-gray-800 @*dark:bg-white*@">
        </span>
        <h1 class="flex flex-col text-6xl font-black leading-none text-gray-800 uppercase font-bebas-neue sm:text-8xl @*dark:text-white*@">
            Auto-
            <span class="text-5xl sm:text-7xl">
                Auctioneer
            </span>
        </h1>
        <p class="text-sm text-gray-700 sm:text-base @*dark:text-white*@">
            Are you a car fanatic who loves to buy, sell, and trade cars and car parts? If so, you have come to
            the right place. Here you can bid on cars and car parts owned by other people, or list your own
            items for sale. You can find everything from vintage cars to futuristic supercars,
            from basic parts to custom upgrades,from wheels to wings.
        </p>
        <div class="flex mt-8" >
            <a href="authentication/register" class="px-4 py-2 mr-4 text-white uppercase bg-pink-500 border-2 border-transparent rounded-lg text-md hover:bg-pink-400">
                Sign Up
            </a>
            <a href="authentication/login" class="px-4 py-2 text-pink-500 uppercase bg-transparent border-2 border-pink-500 rounded-lg @*dark:text-white*@ hover:bg-pink-500 hover:text-white text-md">
                Login
            </a>
        </div>
    </div>
    <div class="flex relative ">
        <img src="images/home_bg.jpeg" class="max-w-xs m-auto md:max-w-2xl" alt="home-screen image" />
    </div>

 </div>
